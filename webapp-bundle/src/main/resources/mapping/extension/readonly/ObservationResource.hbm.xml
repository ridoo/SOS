<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.beans">
    <class name="DataEntity" table="observation">
        <id name="pkid" type="long">
            <column name="observationid"/>
            <generator class="assigned"/>
        </id>
        <discriminator formula="'measurement'" force="true" type="string"/>
        <property column="seriesid" name="seriesPkid" type="long"/>
        <property column="phenomenontime" name="timestamp" type="timestamp"/>
        <property name="deleted" type="org.hibernate.type.TrueFalseType" formula="'F'" />
        <component class="GeometryEntity" name="geometry">
            <property column="lat" name="lat" type="double" />
            <property column="lon" name="lon" type="double" />
        </component>
        <subclass name="MeasurementDataEntity" discriminator-value="measurement" >
        	<property name="value" type="double"/>
        </subclass>
    </class>
</hibernate-mapping>
